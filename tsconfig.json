{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true
  },
  "include": ["server/**/*", "src/**/*"],
  "exclude": ["node_modules", "storage"]
}